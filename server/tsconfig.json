{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", // or "ESNext" if you want to use ESM
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
